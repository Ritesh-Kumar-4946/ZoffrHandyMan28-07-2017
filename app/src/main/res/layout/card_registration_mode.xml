                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/tv_text_sales_person_emp_id"
                        android:layout_toRightOf="@id/tv_text_sales_person_emp_id"
