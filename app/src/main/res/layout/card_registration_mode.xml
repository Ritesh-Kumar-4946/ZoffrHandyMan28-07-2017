                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_select_payment_type_text"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="A/c type :"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_btn_payment_type_cheque"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/tv_select_payment_type_text"
                        android:layout_toRightOf="@id/tv_select_payment_type_text"
                        android:background="@color/reddark"
                        android:paddingBottom="10dp"
