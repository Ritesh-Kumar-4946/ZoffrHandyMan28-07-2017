<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusableInTouchMode="true"
    card_view:cardBackgroundColor="@color/colorCard"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="7dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true">


    <ScrollView
        android:id="@+id/sv_account_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                style="@style/StyleCardTitle"
                android:text="Select account mode" />


            <RelativeLayout
                android:id="@+id/rl_account_type_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_select_account_type_text"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="A/c type :"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_account_type_free"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/tv_select_account_type_text"
                    android:layout_toRightOf="@id/tv_select_account_type_text"
                    android:background="@color/greyLight"
                    android:backgroundTint="@color/greyLight"
                    android:paddingBottom="10dp"
                    android:paddingEnd="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingStart="15dp"
                    android:paddingTop="10dp"
                    android:text="Free"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textCursorDrawable="@drawable/cursor_size"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_account_type_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/tv_account_type_free"
                    android:layout_toRightOf="@id/tv_account_type_free"
                    android:background="@color/reddark"
                    android:paddingBottom="12dp"
                    android:paddingEnd="18dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingStart="18dp"
                    android:paddingTop="12dp"
                    android:text="Paid"
                    android:textColor="@color/whitee"
                    android:textColorHint="@color/grey"
                    android:textCursorDrawable="@drawable/cursor_size"
                    android:textSize="15sp" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_sales_code_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_exe_id_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_text_sales_exe_id"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Exe. :"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edt_sales_exe_id"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/tv_text_sales_exe_id"
                        android:layout_toRightOf="@id/tv_text_sales_exe_id"
                        android:background="@color/greyLight"
                        android:backgroundTint="@color/greyLight"
                        android:hint="@string/edt_hint_sales_exe_code_id"
                        android:inputType="textMultiLine"
                        android:maxLength="50"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textCursorDrawable="@drawable/cursor_size"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_exe_code_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_text_sales_exe_code"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Confirm :"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edt_sales_exe_code"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/tv_text_sales_exe_code"
                        android:layout_toRightOf="@id/tv_text_sales_exe_code"
                        android:background="@color/greyLight"
                        android:backgroundTint="@color/greyLight"
                        android:hint="@string/edt_hint_sales_exe_code_id"
                        android:inputType="textMultiLine"
                        android:maxLength="50"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textCursorDrawable="@drawable/cursor_size"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_btn_get_sales_person_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_btn_get_sales_person_done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/textview_rounded_corner"
                        android:paddingBottom="15dp"
                        android:paddingEnd="20dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingStart="20dp"
                        android:paddingTop="15dp"
                        android:text="Done"
                        android:textColor="@color/whitee"
                        android:textCursorDrawable="@drawable/cursor_size"
                        android:textSize="18sp" />

                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_get_sales_person_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_sales_person_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <!-- <TextView
                         android:id="@+id/tv_text_sales_person_name"
                         android:layout_width="100dp"
                         android:layout_height="wrap_content"
                         android:layout_centerVertical="true"
                         android:text="Name :"
                         android:textSize="15sp" />-->

                    <RelativeLayout
                        android:id="@+id/rl_iv_sales_person_image"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <de.hdodenhof.circleimageview.CircleImageView
