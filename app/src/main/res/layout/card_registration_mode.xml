                        android:textColor="@color/whitee"
                        android:textCursorDrawable="@drawable/cursor_size"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_btn_payment_type_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/tv_btn_payment_type_cheque"
                        android:layout_toRightOf="@id/tv_btn_payment_type_cheque"
                        android:background="@color/reddark"
                        android:paddingBottom="10dp"
                        android:paddingEnd="15dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingStart="15dp"
                        android:paddingTop="10dp"
                        android:text="Cash"
                        android:textColor="@color/whitee"
                        android:textColorHint="@color/grey"
                        android:textCursorDrawable="@drawable/cursor_size"
                        android:textSize="15sp" />

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/ll_cheque_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/rl_cheque_detail_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tv_text_cheque_no"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Cheque No.:"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/edt_cheque_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/tv_text_cheque_no"
                            android:layout_toRightOf="@id/tv_text_cheque_no"
                            android:background="@color/greyLight"
                            android:backgroundTint="@color/greyLight"
                            android:hint="@string/edt_hint_cheque_no"
                            android:inputType="textMultiLine"
                            android:maxLength="20"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:textCursorDrawable="@drawable/cursor_size"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_cheque_cash_amt_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tv_text_cheque_cash_amt"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Amount:"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/edt_cheque_cash_amt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/tv_text_cheque_cash_amt"
                            android:layout_toRightOf="@id/tv_text_cheque_cash_amt"
                            android:background="@color/greyLight"
                            android:backgroundTint="@color/greyLight"
                            android:digits="@string/numeric"
                            android:hint="@string/edt_hint_amount"
                            android:inputType="number"
                            android:maxLength="20"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:textCursorDrawable="@drawable/cursor_size"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_cheque_cash_amt_confirm_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tv_text_cheque_cash_amt_confirm"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Conf. Amt:"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/edt_cheque_cash_amt_confirm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/tv_text_cheque_cash_amt_confirm"
                            android:layout_toRightOf="@id/tv_text_cheque_cash_amt_confirm"
                            android:background="@color/greyLight"
                            android:backgroundTint="@color/greyLight"
                            android:digits="@string/numeric"
                            android:hint="@string/edt_hint_amount"
                            android:inputType="number"
                            android:maxLength="20"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:textCursorDrawable="@drawable/cursor_size"
                            android:textSize="15sp" />

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical">

                        <TextView
                            style="@style/StyleCardTitle"
                            android:text="Cheque Dated" />


                        <RelativeLayout
                            android:id="@+id/rl_package_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp">

                            <devs.mulham.horizontalcalendar.HorizontalCalendarView
                                android:id="@+id/calendarView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/red"
                                app:textColorSelected="@color/whitee"
                                app:textSizeDayName="14sp"
                                app:textSizeDayNumber="20sp" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/rl_cheque_date_selected_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingEnd="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingStart="10dp">

                            <TextView
                                android:id="@+id/tv_text_tv_text_cheque_dated_selected"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="Dated :"
                                android:textSize="15sp" />


                            <TextView
                                android:id="@+id/tv_cheque_dated_selected"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/tv_text_tv_text_cheque_dated_selected"
                                android:layout_toRightOf="@id/tv_text_tv_text_cheque_dated_selected"
                                android:background="@color/greyLight"
                                android:backgroundTint="@color/greyLight"
                                android:hint="@string/tv_hint_checked_selected_date"
                                android:padding="10dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:textCursorDrawable="@drawable/cursor_size"
                                android:textSize="15sp" />


                        </RelativeLayout>


                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/rl_btn_submit_paid_cheue"
                        android:layout_width="match_parent"
