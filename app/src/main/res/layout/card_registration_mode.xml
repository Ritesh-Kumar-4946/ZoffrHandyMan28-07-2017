                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/ic_profile_image_bg"
                            app:civ_border_color="@color/redlight"
                            app:civ_border_width="2dp" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/tv_sales_person_name"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/rl_iv_sales_person_image"
                        android:layout_toRightOf="@id/rl_iv_sales_person_image"
                        android:background="@color/greyLight"
                        android:backgroundTint="@color/greyLight"
                        android:hint="@string/tv_hint_sales_person_name"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textCursorDrawable="@drawable/cursor_size"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_sales_person_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_text_sales_person_phone_number"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Contact No.:"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_sales_person_phone_number"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/tv_text_sales_person_phone_number"
                        android:layout_toRightOf="@id/tv_text_sales_person_phone_number"
